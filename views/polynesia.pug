extends packtemplate 
block content

    h1.header Polynesian Paradise
    h1
    div
        div
        img.main-images(width="33%", src="/Images/thailand1.jpg")
        img.main-images(width="33%", src="/Images/thailand2.jpg")
        img.main-images(width="33%", src="/Images/singapore1.jpg")
    div
        h1.header.description-header Package Description
        ul.package-description.package-details
            li 9 nights in a 5 star resort
            li Outdoor and Indoor Pool
            li Breakfast Buffet
            li Walking distance to the best sight seeing locations
            li Round Trip Flights Included
    div
        h1.header.description-header CART
    .cart-row
        strong.cart-package.cart-header.cart-column PACKAGE
        strong.cart-price.cart-header.cart-column PRICE
        strong.cart-quantity.cart-header.cart-column QAUNTITY
    .cart-row
        .cart-package.cart-column
            img(src="/images/thailand1.jpg", width="100", height="100")
            span.package-name Polynesian Paradise
        span.cart-price.cart-column $3000.00
        .cart-quantity.cart-column
            input.input-box(type="number", value="1")
            button.button-cart(role="button") REMOVE
        br
        .cart-total
            strong Total
            span $3000.00
    br
    div
        button.button-cart.button-cart-purchase(role="button") PURCHASE